{
  "name": "fsbjs",
  "version": "0.0.2",
  "description": "fsbjs",
  "main": "electron/electron.ts",
  "type": "module",
  "scripts": {
    "start": "yarn electron:dev",
    "build": "yarn app:build",
    "dev": "vite --open --force",
    "serve": "vite preview",
    "electron": "wait-on tcp:5173 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "upgrade-all": "yarn yarn-upgrade-all"
  },
  "author": "yongsoo im",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "del-cli": "^5.0.0",
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.29.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "rxjs": "^7.6.0",
    "typescript": "^4.9.4",
    "vite": "^4.1.1",
    "wait-on": "^6.0.1",
    "yarn-upgrade-all": "^0.7.1"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1",
    "is-mobile": "^3.1.1",
    "nipplejs": "^0.10.0",
    "phaser": "^3.55.2",
    "phaser3-rex-plugins": "^1.1.80"
  },
  "build": {
    "appId": "fsbjs",
    "productName": "fsbjs",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "game"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
